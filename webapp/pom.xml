    <build>
        <plugins>
        	
		     <plugin>
		        <artifactId>maven-war-plugin</artifactId>
		        	<configuration>
		          		<failOnMissingWebXml>false</failOnMissingWebXml>
		        	</configuration>
		     </plugin>
        
        
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

        </plugins>
